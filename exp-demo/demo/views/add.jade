extends layout

block content
  .col-md-10
    form.form-horizontal(action="/article/add" method="post")
      .form-group
        label.col-sm-4.control-label(for='articleTitle') title
        .col-sm-8.input-group
          .input-group-addon
            span.glyphicon.glyphicon-user
          input#articleTitle.form-control(type='text', placeholder='articleTitle')
      .form-group
        label.col-sm-4.control-label(for='articleContent') articleContent
        .col-sm-8.input-group
          textarea.form-control(rows="16")
      .form-group
        .col-sm-offset-6.col-sm-8
          button.btn.btn-default(type='submit') submit
