extends layout

block content
  .col-md-4.col-md-offset-3
    form.form-horizontal(action="/users/login" method="post")
      .form-group
        label.col-sm-4.control-label(for='userName') userName
        .col-sm-8.input-group
          .input-group-addon
            span.glyphicon.glyphicon-user
          input#userName.form-control(type='text', placeholder='userName')
      .form-group
        label.col-sm-4.control-label(for='inputPassword3') Password
        .col-sm-8.input-group
          .input-group-addon
            span.glyphicon.glyphicon-lock
          input#inputPassword3.form-control(type='password', placeholder='Password')
      .form-group
        .col-sm-offset-6.col-sm-8
          button.btn.btn-default(type='submit') login
